@page
@model SistemaMultas.Pages.Agente.RegistrarMultaModel
@{
    ViewData["Title"] = "Registrar Multa";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Registrar Nueva Multa</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Multa.CedulaCiudadano" class="form-label">Cédula del Ciudadano</label>
                            <input asp-for="Multa.CedulaCiudadano" class="form-control" />
                            <span asp-validation-for="Multa.CedulaCiudadano" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Multa.NombreCiudadano" class="form-label">Nombre del Ciudadano</label>
                            <input asp-for="Multa.NombreCiudadano" class="form-control" />
                            <span asp-validation-for="Multa.NombreCiudadano" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Multa.ConceptoId" class="form-label">Concepto</label>
                            <select asp-for="Multa.ConceptoId" class="form-select" 
                                    asp-items="@Model.ConceptosList">
                                <option value="">Seleccione un concepto...</option>
                            </select>
                            <span asp-validation-for="Multa.ConceptoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Multa.Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Multa.Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Multa.Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Registrar Multa</button>
                            <a href="/Agente" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}